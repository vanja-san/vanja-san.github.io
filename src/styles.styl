@font-face
  font-family 'Segoe UI Var'
  src url('https://vanja-san.github.io/yarui/src/fonts/SegoeUI-VF.ttf')

*, ::after, ::before
  box-sizing border-box

*
  margin 0
  padding 0
  text-decoration none

body
  background #f0f0f0
  height 100vh
  overflow hidden
  font-family 'Segoe UI Var', sans-serif
  color #212121
  max-width 1250px
  margin 0 auto

  &.dark-theme
    background #444
    color #fff

  &.light-theme
    background #f0f0f0
    color #333

nav
  padding .5rem 3rem
  display flex
  justify-content space-between
  align-items center

  .logo
    font bold 24pt Caveat, sans-serif

  ul
    list-style none
    margin 0
    padding 0
    display flex
    align-items center

  li
    margin-right 20px

  a
    font bold 20pt Caveat, sans-serif
    color inherit
    text-decoration none

    &:hover
      color #ccc

  .toggle-theme
    background unset
    border none
    padding 0.5rem 1rem
    font-size 1rem
    cursor pointer

    i
      color inherit
      font-size 1.5rem

      &.fa-moon
        color #212121
        &:hover
          color #6981ec

      &.fa-sun
        color #fff
        &:hover
          color #ecd869

blockquote
  font 700 24pt Playfair Display, serif
  text-align center
  margin 0 auto
  padding 1rem
  display flex
  flex-direction column
  justify-content center
  align-items center
  width 50%
  height 100vh
  position absolute
  top 50%
  left 50%
  transform translate(-50%, -50%)
  color inherit

  &.dark-theme
    color #fff

  &.light-theme
    color #333

  .quote-text
    //transition opacity 0.5s
    &.light-theme
      color #333

  .quote-author
    font-size 1.5rem
    color #666
    margin-top 0.5rem
    //transition opacity 0.5s

    &.dark-theme
      color #aaa

    &.light-theme
      color #666

.animate-out
  animation fadeOut 1s cubic-bezier(0.4, 0, 0.2, 1) forwards

.animate-in
  animation fadeIn 1.2s cubic-bezier(0.4, 0, 0.2, 1) forwards

@keyframes fadeOut
  to
    opacity 0

@keyframes fadeIn
  from
    opacity 0
  to
    opacity 1
 
footer
  position absolute
  bottom 0
  left 0
  width 100%
  background transparent
  padding .1rem
  text-align center
  color #fff